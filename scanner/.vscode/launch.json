    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Launch with arguments",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["-eval", "-json"]
        },
        {
            "name": "Debug with eval+json",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": ["-eval", "-json"],
            "showLog": true
        },
        {
            "name": "Debug with path (sdkman)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": ["-eval", "-json", "-path", "${env:HOME}/.sdkman"],
            "showLog": true
        },
        {
            "name": "Debug with verbose",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "args": ["-eval", "-json", "-verbose"],
            "showLog": true
        }
    ]
}